@{
    ViewData["Title"] = "Tính Điểm";
}

<h2>Tính Điểm</h2>

<form asp-action="CalculateDiem" method="post">
    <div class="form-group">
        <label for="diemToan">Điểm A:</label>
        <input type="number" step="0.01" class="form-control" id="diemToan" name="diemToan" required />
    </div>
    <div class="form-group">
        <label for="diemLy">Điểm B:</label>
        <input type="number" step="0.01" class="form-control" id="diemLy" name="diemLy" required />
    </div>
    <div class="form-group">
        <label for="diemHoa">Điểm C:</label>
        <input type="number" step="0.01" class="form-control" id="diemHoa" name="diemHoa" required />
    </div>
    <button type="submit" class="btn btn-primary">Tính</button>
</form>